{
    "env": {
        "browser": false,
        "node": true,
        "amd": false
    },

    "rules": {

        "no-alert": 1,
        "no-caller": 1,
        "no-bitwise": 1,
        "no-console": 1,
        "no-comma-dangle": 1,
        "no-debugger": 1,
        "no-dupe-keys": 1,
        "no-else-return": 1,
        "no-empty": 1,
        "no-eq-null": 1,
        "no-eval": 1,
        "no-ex-assign": 1,
        "no-floating-decimal": 1,
        "no-implied-eval": 1,
        "no-with": 1,
        "no-fallthrough": 0,
        "no-unreachable": 1,
        "no-undef": 1,
        "no-undef-init": 1,
        "no-octal": 1,
        "no-obj-calls": 1,
        "no-new-wrappers": 1,
        "no-new": 1,
        "no-new-func": 1,
        "no-native-reassign": 1,
        "no-plusplus": 0,
        "no-delete-var": 1,
        "no-return-assign": 1,
        "no-new-array": 1,
        "no-new-object": 1,
        "no-label-var": 1,
        "no-ternary": 0,
        "no-self-compare": 1,
        "no-sync": 1,
        "no-underscore-dangle": 0,
        "no-loop-func": 1,
        "no-empty-label": 1,
        "no-unused-vars": 0,

        "smarter-eqeqeq": 1,
        "brace-style": 1,
        "camelcase": 1,
        "curly": 1,
        "dot-notation": 1,
        "eqeqeq": 1,
        "new-parens": 1,
        "guard-for-in": 1,
        "radix": 1,
        "new-cap": 1,
        "one-var": 0,
        "quote-props": 0,
        "semi": 1,
        "use-isnan": 1,
        "quotes": [1, "single"],
        "max-params": [1, 3],
        "max-statements": [1, 15],
        "regex-spaces": 1,
        "complexity": [1, 11],
        "wrap-iife": 1,
        "no-multi-str": 1,
        "consistent-this": [1, "self"],
        "unnecessary-strict": 1,
        "no-mixed-requires": [1, true]
    }
}
